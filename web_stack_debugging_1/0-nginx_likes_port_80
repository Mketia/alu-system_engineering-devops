#!/usr/bin/env bash
# Configure Nginx to listen on port 80 and ensure it's running
apt-get update
apt-get install -y nginx
service nginx stop
sed -i 's/listen 8080;/listen 80;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:8080;/listen [::]:80;/' /etc/nginx/sites-available/default
if [ ! -f /etc/nginx/sites-enabled/default ]; then
    ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/
    fi
    service nginx start
    if netstat -tuln | grep ':80'; then
        echo "Nginx is now listening on port 80."
        else
            echo "Failed to start Nginx on port 80."
           fi
